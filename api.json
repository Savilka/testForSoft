      "delete": {
        "tags": [
          "Ingredient"
        ],
        "summary": "Удалить ингредиент по id",
        "description": "Удалить ингредиент по id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id ингредиента",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Ингредиент удален"
          },
          "500": {
            "description": "Ошибка базы данных"
          }
        }
      },
      "patch": {
        "tags": [
          "Ingredient"
        ],
        "summary": "Обновить ингредиент по id",
        "description": "Обновить ингредиент по id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id ингредиента",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/IngredientForUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ингредиент обновлен"
          },
          "404": {
            "description": "Ингредиент не найден"
          },
          "500": {
            "description": "Ошибка базы данных"
          }
        }
      }
    },
    "/ingredient/addIngredient": {
      "post": {
        "tags": [
          "Ingredient"
        ],
        "summary": "Добавить ингредиент",
        "description": "Добавить ингредиент",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Ingredient"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Ингредиент добавлен",
            "content": {
              "application/json": {
                "schema": {
                  "type": "integer"
                }
              }
            }
          },
          "500": {
            "description": "Ошибка базы данных"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Recipe": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "steps": {
            "type": "string"
          },
          "path_to_photo": {
            "type": "string"
          },
          "ingredients": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/IngredientForRecipe"
            }
          }
        }
      },
      "IngredientForRecipe": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "amount": {
            "type": "integer"
          }
        }
      },
      "RecipeForUpdate": {
        "type": "object",
        "properties": {
          "value": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "steps": {
                "type": "string"
              },
              "path_to_photo": {
                "type": "string"
              },
              "ingredients": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/IngredientForRecipe"
                }
              }
            }
          }
        }
      },
      "Ingredient": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "unit": {
            "type": "string"
          }
        }
      },
      "IngredientForUpdate": {
        "type": "object",
        "properties": {
          "value": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "unit": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
